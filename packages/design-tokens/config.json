{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "build/",
      "transforms": [
        "attribute/cti",
        "name/cti/constant",
        "color/hsl",
        "size/px"
      ],
      "files": [
        {
          "destination": "variables.js",
          "format": "javascript/es6"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "files": [
        {
          "format": "typescript/es6-declarations",
          "destination": "build/variables.d.ts"
        }
      ]
    }
  }
}
