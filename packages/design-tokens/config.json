{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "build/",
      "transforms": [
        "attribute/cti",
        "name/cti/constant",
        "color/hsl",
        "size/px"
      ],
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        },
        {
          "destination": "tokens.mjs",
          "format": "javascript/module-flat"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "transforms": ["attribute/cti", "name/cti/constant"],
      "files": [
        {
          "format": "typescript/es6-declarations",
          "destination": "build/tokens.d.ts"
        }
      ]
    }
  }
}
